<div class="container">
  <h1>Add Post</h1>

  {{#each errors}}
    <h1>{{text}}</h1>
  {{else}}
  {{/each}}
  <div class="card">
    <div class="card-content">
      <div class="row">
        <form class="col s12" action="/posts" method="post">
          <div class="row">
            <div class="input-field col s12">
              <input placeholder="Title" id="title" type="text" class="validate" name="title" value="{{title}}" required>
              <label for="title">Title</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Title" id="description" type="text" class="validate" name="description" value="{{description}}" required>

              <label for="description">Description</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
